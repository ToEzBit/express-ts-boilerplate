{
  "name": "express-ts",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "rimraf build && tsc",
    "start": "npm run build && NODE_ENV=production tsx build/index.js",
    "dev": "tsx watch --clear-screen=false src/index.ts | pnpm run pretty",
    "lint": "eslint 'src/**/*.{ts,js}'",
